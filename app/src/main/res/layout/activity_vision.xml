    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="614dp"
        android:layout_marginBottom="120dp"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/selected_image"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="10dp"
                android:background="@color/imgbackground" />

            <TextView
                android:id="@+id/labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="labels"
                android:textAlignment="center"
                android:textColor="@color/idk"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_label_results"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_label_results"
                app:layout_constraintTop_toBottomOf="@+id/selected_image" />

            <TextView
                android:id="@+id/tv_label_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="150dp"
                android:fontFamily="@font/gudea"
                android:textAlignment="center"
                android:textColor="@color/idk"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labels" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/select_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/gudea"
        android:text="Choose an Image"
        android:textColor="@color/buttoncolor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


